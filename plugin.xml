<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin
   id="com.arcaner.warlock"
   name="Warlock: Simutronics Game Client"
   version="2.0.0"
   provider-name="Warlock Team"
   class="com.arcaner.warlock.plugin.Warlock2Plugin">

   <runtime>
      <library name="warlock2.jar">
         <export name="*"/>
      </library>
      <library name="dom4j-1.5.2.jar">
         <export name="*"/>
      </library>
      <library name="jaxen-1.1-beta-4.jar">
         <export name="*"/>
      </library>
      <library name="js.jar">
         <export name="*"/>
      </library>
   </runtime>

   <requires>
      <import plugin="org.eclipse.ui"/>
      <import plugin="org.eclipse.core.runtime"/>
      <import plugin="org.eclipse.jface.text"/>
   </requires>
   <extension-point id="scriptEngines" name="Warlock Script Engine" schema="schema/scriptEngines.exsd"/>
   <extension-point id="macroVariables" name="Warlock Macro Variable" schema="schema/macroVariables.exsd"/>
   <extension-point id="macroCommands" name="Warlock Macro Commands" schema="schema/macroCommands.exsd"/>
   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="true"
            icon="icons/character.gif"
            class="com.arcaner.warlock.views.GameView"
            name="Warlock"
            id="com.arcaner.warlock.views.gameView"/>
      <view
            allowMultiple="false"
            icon="icons/compass_view.gif"
            class="com.arcaner.warlock.views.CompassView"
            name="Compass"
            id="com.arcaner.warlock.views.compassView"/>
      <view
            allowMultiple="false"
            class="com.arcaner.warlock.views.BarsView"
            name="Bars"
            id="com.arcaner.warlock.views.barsView"/>
   </extension>
   <extension
         id="warlock"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run class="com.arcaner.warlock.application.WarlockApplication"/>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="com.arcaner.warlock.application.WarlockPerspectiveFactory"
            name="Warlock Perspective"
            id="com.arcaner.warlock.warlockPerspective"/>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            name="Connect"
            id="com.arcaner.warlock.commands.connectCommand"/>
      <keyConfiguration
            name="Warlock Key Configuration"
            parent="org.eclipse.ui.defaultAcceleratorConfiguration"
            id="com.arcaner.warlock.keyConfiguration"/>
      <keyBinding
            contextId="org.eclipse.ui.globalScope"
            command="com.arcaner.warlock.commands.connectCommand"
            string="Ctrl+Shift+C"
            commandId="com.arcaner.warlock.commands.connectCommand"
            configuration="com.arcaner.warlock.keyConfiguration"/>
   </extension>
   <extension
         point="com.arcaner.warlock.scriptEngines">
      <scriptEngine classname="com.arcaner.warlock.script.javascript.JavascriptEngine"/>
   </extension>
   <extension
         point="com.arcaner.warlock.macroVariables">
      <macroVariable classname="com.arcaner.warlock.ui.macros.internal.variables.CurrentCommandMacroVariable"/>
      <macroVariable classname="com.arcaner.warlock.ui.macros.internal.variables.LastCommandMacroVariable"/>
      <macroVariable classname="com.arcaner.warlock.ui.macros.internal.variables.NextCommandMacroVariable"/>
   </extension>
   <extension
         point="com.arcaner.warlock.macroCommands">
      <macroCommand classname="com.arcaner.warlock.ui.macros.internal.commands.SendMacroCommand"/>
      <macroCommand classname="com.arcaner.warlock.ui.macros.internal.commands.ClearMacroCommand"/>
   </extension>

</plugin>
