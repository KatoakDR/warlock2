<!--
	This file needs to be seperate because it has to be run through the special eclipse antrunner so it can use "eclipse.versionReplacer"
-->
<project default="replace-versions">

	<property file="warlock-build.properties"/>
	<import file="common.xml"/>
	
	<target name="replace-versions">
		<getWarlockVersion property="version"/>
		<echo>Building warlock version ${version}...</echo>
		
		<eclipse.versionReplacer path="${buildDirectory}/features/cc.warlock.rcp.feature" version="${version}"/>
		<eclipse.versionReplacer path="${buildDirectory}/features/cc.warlock.rcp.stormfront.feature" version="${version}"/>
		<eclipse.versionReplacer path="${buildDirectory}/plugins/cc.warlock.core" version="${version}"/>
		<eclipse.versionReplacer path="${buildDirectory}/plugins/cc.warlock.core.script" version="${version}"/>
		<eclipse.versionReplacer path="${buildDirectory}/plugins/cc.warlock.core.stormfront" version="${version}"/>
		<eclipse.versionReplacer path="${buildDirectory}/plugins/cc.warlock.core.stormfront.script" version="${version}"/>
		<eclipse.versionReplacer path="${buildDirectory}/plugins/cc.warlock.rcp" version="${version}"/>
		<eclipse.versionReplacer path="${buildDirectory}/plugins/cc.warlock.rcp.stormfront" version="${version}"/>
		<eclipse.versionReplacer path="${buildDirectory}/plugins/cc.warlock.rcp.userstreams" version="${version}"/>
		
	</target>
	
</project>